{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>nuxt/renovate-config-nuxt"
  ],
  "packageRules": [
    {
      "groupName": "nuxt modules",
      "matchPackagePatterns": ["^@nuxtjs/", "^@nuxt/"]
    },
    {
      "groupName": "vite ecosystem",
      "matchPackageNames": ["vite", "vite-node", "vitest", "@vitejs/plugin-vue"]
    }
  ]
}
